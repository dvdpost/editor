<%= form_for(@chronicle,:url=> @path ) do |f| %>
  <%= f.error_messages if 1==0 %>
  <p>
    <%= f.label :name %><br /><br />
    <%= f.text_field :name, :size => 85, :tabindex => 1 %>
  </p>
  <p>
     status : <%= f.select :status, %w[TEST ONLINE] %>
  </p>
  <p>
     selected : <%= f.select :selected, %w[0 1] %>
  </p>
  <p>
     category : <%= f.select :category_id, @categories.collect{|category| [category.name, category.id]} %>
  </p>
  <p id ="translation_p">
    <%= f.submit 'Validate', :tabindex => 2 %> - <%= link_to 'Back', chronicles_path(:page=> @page ), :tabindex => 3 %>
  </p>
<% end %>