<%= form_for(@news,:url=> @path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages if 1==0 %>
  <p>
    <%= f.label :name %><br /><br />
    <%= f.text_field :name, :size => 85, :tabindex => 1 %>
  </p>
  <p>
     rating : <%= f.select :rating, %w[0 1 2 3 4 5] %>
  </p>
  <p>
     imdb_id : <%= f.text_field :imdb_id %>
  </p>
  <p>
     category : <%= f.select :category_id, @categories.collect{|category| [category.name, category.id]} %>
  </p>
  <p>
     author : <%= f.text_field :author %>
  </p>
  <p id ="translation_p">
    <%= f.submit 'Validate', :tabindex => 2 %> - <%= link_to 'Back', news_index_path(:page=> @page ), :tabindex => 3 %>
  </p>
  
<% end %>