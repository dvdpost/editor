		Language : <%= language_name(content.language_id) %><br />
		subject : <%= content.title %> <br />subtitle : <%= content.subtitle %><br />
		status : <%= content.status %><br />
		<%= image_tag content.cover.url(:small) %> 
		 <br /><%= link_to 'Edit', edit_news_content_path(@news, content, :page=>@page), :class => "edit" %>
